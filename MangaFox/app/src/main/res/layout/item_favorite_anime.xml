<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    card_view:contentPadding="5dp"
    card_view:cardBackgroundColor="@color/primaryBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80">

            <ImageView
                android:id="@+id/anime_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_gray"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"
                android:transitionName="@string/transition_image" />

            <TextView
                android:id="@+id/episode_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@color/itemEpBgColor"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Táº­p 1: he he hi ho"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <TextView
            android:id="@+id/anime_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="3dp"
            android:text="Naruto"
            android:textColor="@color/itemTitleColor"
            android:textSize="16sp"
            android:transitionName="@string/transition_title"/>


    </LinearLayout>
</android.support.v7.widget.CardView>
